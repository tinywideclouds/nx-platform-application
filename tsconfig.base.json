{
  "compileOnSave": false,
  "compilerOptions": {
    "rootDir": ".",
    "sourceMap": true,
    "declaration": false,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "importHelpers": true,
    "skipLibCheck": true,
    "skipDefaultLibCheck": true,
    "baseUrl": ".",
    "moduleResolution": "bundler",
    "target": "ESNext",
    "module": "esnext",
    "lib": ["es2022"],
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "resolveJsonModule": true,
    "forceConsistentCasingInFileNames": true,
    "paths": {
      "@nx-platform-application/chat-data-access": [
        "libs/messenger/chat-data-access/src/index.ts"
      ],
      "@nx-platform-application/chat-live-data": [
        "libs/messenger/chat-live-data/src/index.ts"
      ],
      "@nx-platform-application/chat-state": [
        "libs/messenger/chat-state/src/index.ts"
      ],
      "@nx-platform-application/chat-storage": [
        "libs/messenger/chat-storage/src/index.ts"
      ],
      "@nx-platform-application/chat-ui": [
        "libs/messenger/chat-ui/src/index.ts"
      ],
      "@nx-platform-application/console-logger": [
        "libs/platform/ng/console-logger/src/index.ts"
      ],
      "@nx-platform-application/contacts-data-access": [
        "libs/contacts/contacts-data-access/src/index.ts"
      ],
      "@nx-platform-application/contacts-ui": [
        "libs/contacts/contacts-ui/src/index.ts"
      ],
      "@nx-platform-application/internal-tools": [
        "libs/internal-tools/src/index.ts"
      ],
      "@nx-platform-application/key-cache-access": [
        "libs/messenger/key-cache-access/src/index.ts"
      ],
      "@nx-platform-application/messenger-crypto-access": [
        "libs/messenger/messenger-crypto-access/src/index.ts"
      ],
      "@nx-platform-application/messenger-key-access": [
        "libs/messenger/messenger-key-access/src/index.ts"
      ],
      "@nx-platform-application/messenger-protos": [
        "libs/messenger/protos/src/index.ts"
      ],
      "@nx-platform-application/messenger-protos/*": [
        "libs/messenger/protos/dist/ts/src/messenger/*"
      ],
      "@nx-platform-application/messenger-types": [
        "libs/messenger/types/src/index.ts"
      ],
      "@nx-platform-application/node-auth": [
        "libs/platform/node/node-auth/src/index.ts"
      ],
      "@nx-platform-application/node-logger": [
        "libs/platform/node/node-logger/src/index.ts"
      ],
      "@nx-platform-application/platform-auth-data-access": [
        "libs/platform/ng/auth-data-access/src/index.ts"
      ],
      "@nx-platform-application/platform-auth-data-access/testing": [
        "libs/platform/ng/auth-data-access/src/testing.ts"
      ],
      "@nx-platform-application/platform-auth-ui": [
        "libs/platform/ng/auth-ui/src/index.ts"
      ],
      "@nx-platform-application/platform-dexie-storage": [
        "libs/platform/ng/dexie-storage/src/index.ts"
      ],
      "@nx-platform-application/platform-protos": [
        "libs/platform/protos/src/index.ts"
      ],
      "@nx-platform-application/platform-protos/*": [
        "libs/platform/protos/dist/ts/src/types/*"
      ],
      "@nx-platform-application/platform-types": [
        "libs/platform/types/src/index.ts"
      ],
      "@nx-platform-application/web-key-storage": [
        "libs/platform/ng/web-key-storage/src/index.ts"
      ]
    }
  },
  "exclude": ["node_modules", "tmp"]
}
