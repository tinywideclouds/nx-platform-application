{
  "name": "chat-live-data",
  "$schema": "../../../node_modules/nx/schemas/project-schema.json",
  "sourceRoot": "libs/messenger/chat-live-data/src",
  "prefix": "lib",
  "projectType": "library",
  "tags": ["scope:messenger"],
  "targets": {
    "build": {
      "executor": "@nx/vite:build",
      "outputs": [
        "{options.outputPath}"
      ],
      "defaultConfiguration": "production",
      "options": {
        "outputPath": "dist/libs/messenger/chat-live-data",
        "configFile": "libs/messenger/chat-live-data/vite.config.mts"
      }
    },
    "test": {
      "executor": "@nx/vite:test",
      "outputs": [
        "{options.reportsDirectory}"
      ],
      "options": {
        "reportsDirectory": "coverage/libs/messenger/chat-live-data",
        "configFile": "libs/messenger/chat-live-data/vitest.config.mts"
      }
    }
  },
  "lint": {
    "executor": "@nx/eslint:lint"
  }
}
