{
  "name": "chat-state",
  "$schema": "../../../node_modules/nx/schemas/project-schema.json",
  "sourceRoot": "libs/messenger/chat-state/src",
  "prefix": "lib",
  "projectType": "library",
  "tags": ["scope:messenger"],
  "targets": {
    "build": {
      "executor": "@nx/vite:build",
      "outputs": ["{options.outputPath}"],
      "defaultConfiguration": "production",
      "options": {
        "outputPath": "dist/libs/messenger/chat-state",
        "configFile": "libs/messenger/chat-state/vite.config.mts"
      }
    },
    "test": {
      "executor": "@nx/vite:test",
      "outputs": ["{options.reportsDirectory}"],
      "options": {
        "reportsDirectory": "coverage/libs/messenger/chat-state",
        "configFile": "libs/messenger/chat-state/vitest.config.mts"
      }
    },
    "lint": {
      "executor": "@nx/eslint:lint"
    }
  }
}
