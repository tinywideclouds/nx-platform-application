{
  "name": "messenger-crypto-bridge",
  "$schema": "../../../node_modules/nx/schemas/project-schema.json",
  "sourceRoot": "libs/messenger/crypto-bridge/src",
  "prefix": "lib",
  "projectType": "library",
  "tags": ["scope:messenger"],
  "targets": {
    "build": {
      "executor": "@nx/vite:build",
      "outputs": ["{options.outputPath}", "{options.outputHtmlPath}"],
      "defaultConfiguration": "production",
      "options": {
        "outputPath": "dist/libs/messenger/crypto-bridge",
        "outputHtmlPath": "dist/test-reports/libs/messenger/crypto-bridge/index.html",
        "configFile": "libs/messenger/crypto-bridge/vite.config.mts"
      }
    },
    "test": {
      "executor": "@nx/vite:test",
      "outputs": ["{options.reportsDirectory}"],
      "options": {
        "reportsDirectory": "coverage/libs/messenger/crypto-bridge",
        "configFile": "libs/messenger/crypto-bridge/vitest.config.mts"
      }
    },
    "lint": {
      "executor": "@nx/eslint:lint"
    }
  }
}
