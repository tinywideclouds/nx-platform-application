{
  "name": "messenger-types",
  "$schema": "../../../node_modules/nx/schemas/project-schema.json",
  "sourceRoot": "libs/messenger/types/src",
  "projectType": "library",
  "tags": ["scope:types-messenger"],
  "// targets": "to see all targets run: nx show project types --web",
  "targets": {
    "build": {
      "executor": "@nx/vite:build",
      "outputs": ["{options.outputPath}"],
      "defaultConfiguration": "production",
      "options": {
        "outputPath": "dist/libs/messenger/types",
        "configFile": "libs/messenger/types/vite.config.mts"
      }
    },
    "test": {
      "executor": "@nx/vite:test",
      "outputs": ["{options.reportsDirectory}"],
      "options": {
        "configFile": "libs/messenger/types/vitest.config.mts",
        "reportsDirectory": "coverage/libs/messenger/types"
      }
    }
  }
}
