{
  "name": "messenger-device-pairing",
  "$schema": "../../../../node_modules/nx/schemas/project-schema.json",
  "sourceRoot": "libs/messenger/domain/device-pairing/src",
  "prefix": "lib",
  "projectType": "library",
  "tags": ["scope:messenger"],
  "targets": {
    "build": {
      "executor": "@nx/vite:build",
      "outputs": ["{options.outputPath}"],
      "defaultConfiguration": "production",
      "options": {
        "outputPath": "dist/libs/messenger/domain/device-pairing",
        "configFile": "libs/messenger/domain/device-pairing/vite.config.mts"
      }
    },
    "test": {
      "executor": "@nx/vitest:test",
      "outputs": ["{options.reportsDirectory}"],
      "options": {
        "reportsDirectory": "../../../../coverage/libs/messenger/domain/device-pairing",
        "configFile": "libs/messenger/domain/device-pairing/vitest.config.mts"
      }
    },
    "lint": {
      "executor": "@nx/eslint:lint"
    }
  }
}
