{
  "name": "messenger-domain-outbox",
  "$schema": "../../../../node_modules/nx/schemas/project-schema.json",
  "sourceRoot": "libs/messenger/domain/outbox/src",
  "prefix": "lib",
  "projectType": "library",
  "tags": ["scope:messenger", "layer:domain"],
  "targets": {
    "build": {
      "executor": "@nx/vite:build",
      "outputs": ["{options.outputPath}"],
      "defaultConfiguration": "production",
      "options": {
        "outputPath": "dist/libs/messenger/domain/outbox",
        "configFile": "libs/messenger/domain/outbox/vite.config.mts"
      }
    },
    "test": {
      "executor": "@nx/vitest:test",
      "outputs": ["{options.reportsDirectory}"],
      "options": {
        "reportsDirectory": "coverage/libs/messenger/domain/outbox",
        "configFile": "libs/messenger/domain/outbox/vitest.config.mts"
      }
    },
    "lint": {
      "executor": "@nx/eslint:lint"
    }
  }
}
