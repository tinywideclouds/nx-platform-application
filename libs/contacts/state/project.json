{
  "name": "contacts-state",
  "$schema": "../../../node_modules/nx/schemas/project-schema.json",
  "sourceRoot": "libs/contacts/state/src",
  "prefix": "lib",
  "projectType": "library",
  "tags": ["scope:contacts"],
  "targets": {
    "build": {
      "executor": "@nx/vite:build",
      "outputs": ["{options.outputPath}"],
      "defaultConfiguration": "production",
      "options": {
        "outputPath": "dist/libs/contacts/state",
        "configFile": "libs/contacts/types/vite.config.mts"
      }
    },
    "test": {
      "executor": "@nx/vitest:test",
      "outputs": ["{options.reportsDirectory}"],
      "options": {
        "configFile": "libs/contacts/types/vitest.config.mts",
        "reportsDirectory": "coverage/libs/contacts/sttate"
      }
    },
    "lint": {
      "executor": "@nx/eslint:lint"
    }
  }
}
