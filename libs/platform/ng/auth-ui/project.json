{
  "name": "platform-auth-ui",
  "$schema": "../../../../node_modules/nx/schemas/project-schema.json",
  "sourceRoot": "libs/platform/ng/auth-ui/src",
  "prefix": "aui",
  "projectType": "library",
  "tags": ["scope:platform"],
  "targets": {
    "build": {
      "executor": "@nx/vite:build",
      "outputs": ["{options.outputPath}"],
      "defaultConfiguration": "production",
      "options": {
        "outputPath": "dist/libs/platform/ng/auth-ui",
        "configFile": "libs/platform/ng/auth-ui/vite.config.mts"
      }
    },
    "test": {
      "executor": "@nx/vite:test",
      "outputs": [
        "{options.reportsDirectory}",
        "{options.reportsHtmlDirectory}"
      ],
      "options": {
        "reportsDirectory": "coverage/libs/platform/ng/auth-ui",
        "reportsHtmlDirectory": "dist/test-reports/platform/ng/auth-ui",
        "configFile": "libs/platform/ng/auth-ui/vitest.config.mts"
      }
    },
    "lint": {
      "executor": "@nx/eslint:lint"
    }
  }
}
