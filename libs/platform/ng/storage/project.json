{
  "name": "platform-storage",
  "$schema": "../../../../node_modules/nx/schemas/project-schema.json",
  "sourceRoot": "libs/platform/ng/storage/src",
  "prefix": "lib",
  "projectType": "library",
  "tags": ["scope:platform"],
  "targets": {

    "build": {
      "executor": "@nx/vite:build",
      "outputs": ["{options.outputPath}"],
      "options": {
        "outputPath": "dist/libs/platform/ng/storage",
        "configFile": "libs/platform/ng/storage/vite.config.mts",
        "main": "libs/platform/ng/storage/src/index.ts",
        "assets": ["libs/platform/ng/storage/*.md"]
      }
    },
    "test": {
      "executor": "@nx/vite:test",
      "outputs": ["{options.reportsDirectory}"],
      "options": {
        "reportsDirectory": "coverage/libs/platform/ng/storage",
        "configFile": "libs/platform/ng/storage/vitest.config.mts"
      }
    },
    "lint": {
      "executor": "@nx/eslint:lint"
    }
  }
}
