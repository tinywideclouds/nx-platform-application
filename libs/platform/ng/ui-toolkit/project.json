{
  "name": "platform-ui-toolkit",
  "$schema": "../../../../node_modules/nx/schemas/project-schema.json",
  "sourceRoot": "libs/platform/ng/ui-toolkit/src",
  "prefix": "lib",
  "projectType": "library",
  "tags": ["scope:platform"],
  "targets": {
    "test": {
      "executor": "@nx/vite:test",
      "dependsOn": [
        "^build",
        { "projects": "console-logger", "target": "build" }
      ],
      "outputs": [
        "{options.reportsDirectory}",
        "{options.htmlReportDirectory}"
      ],
      "options": {
        "reportsDirectory": "coverage/libs/platform/ui-toolkit",
        "htmlReportDirectory": "dist/test-reports/libs/platform/ui-toolkit",
        "configFile": "libs/platform/ng/ui-toolkit/vitest.config.mts"
      }
    },
    "lint": {
      "executor": "@nx/eslint:lint"
    }
  }
}
