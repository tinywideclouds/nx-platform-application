{
  "name": "platform-infrastructure-indexed-db",
  "$schema": "../../../../node_modules/nx/schemas/project-schema.json",
  "sourceRoot": "libs/platform/infrastructure/indexed-db/src",
  "prefix": "lib",
  "projectType": "library",
  "tags": ["scope:platform", "type:infrastructure"],
  "targets": {
    "build": {
      "executor": "@nx/vite:build",
      "outputs": ["{options.outputPath}"],
      "options": {
        "outputPath": "dist/libs/platform/infrastructure/indexed-db",
        "configFile": "libs/platform/infrastructure/indexed-db/vite.config.mts",
        "main": "libs/platform/infrastructure/indexed-db/src/index.ts",
        "assets": ["libs/platform/infrastructure/indexed-db/*.md"]
      }
    },
    "test": {
      "executor": "@nx/vite:test",
      "outputs": ["{options.reportsDirectory}"],
      "options": {
        "reportsDirectory": "coverage/libs/platform/infrastructure/indexed-db",
        "configFile": "libs/platform/infrastructure/indexed-db/vitest.config.mts"
      }
    },
    "lint": {
      "executor": "@nx/eslint:lint"
    }
  }
}
