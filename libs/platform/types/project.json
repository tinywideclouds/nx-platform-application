{
  "name": "platform-types",
  "$schema": "../../../node_modules/nx/schemas/project-schema.json",
  "sourceRoot": "libs/platform/types/src",
  "projectType": "library",
  "tags": ["scope:types-platform"],
  "// targets": "to see all targets run: nx show project types --web",
  "targets": {
    "build": {
      "executor": "@nx/vite:build",
      "outputs": ["{options.outputPath}"],
      "defaultConfiguration": "production",
      "options": {
        "outputPath": "dist/libs/platform/types",
        "configFile": "libs/platform/types/vite.config.mts"
      }
    },
    "test": {
      "executor": "@nx/vite:test",
      "outputs": ["{options.reportsDirectory}"],
      "options": {
        "configFile": "libs/platform/types/vitest.config.mts",
        "reportsDirectory": "../../../coverage/libs/platform/types"
      }
    }
  }
}
