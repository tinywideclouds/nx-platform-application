{
  "name": "platform-sdk-core",
  "$schema": "../../../node_modules/nx/schemas/project-schema.json",
  "sourceRoot": "libs/platform/sdk-core/src",
  "projectType": "library",
  "tags": ["scope:sdk-core-platform"],
  "// targets": "to see all targets run: nx show project sdk-core --web",
  "targets": {
    "build": {
      "executor": "@nx/vite:build",
      "outputs": ["{options.outputPath}"],
      "defaultConfiguration": "production",
      "options": {
        "outputPath": "dist/libs/platform/sdk-core",
        "configFile": "libs/platform/sdk-core/vite.config.mts"
      }
    },
    "test": {
      "executor": "@nx/vite:test",
      "outputs": ["{options.reportsDirectory}"],
      "options": {
        "configFile": "libs/platform/sdk-core/vitest.config.mts",
        "reportsDirectory": "../../../coverage/libs/platform/sdk-core"
      }
    }
  }
}
