{
  "name": "node-logger",
  "$schema": "../../../../node_modules/nx/schemas/project-schema.json",
  "sourceRoot": "libs/platform/node/node-logger/src",
  "prefix": "aui",
  "projectType": "library",
  "tags": ["scope:platform"],
  "targets": {
    "build": {
      "executor": "@nx/js:tsc",
      "outputs": ["{options.outputPath}"],
      "defaultConfiguration": "production",
      "options": {
        "main": "libs/platform/node/node-logger/src/index.ts",
        "outputPath": "dist/libs/platform/node/node-logger",
        "tsConfig": "libs/platform/node/node-logger/tsconfig.lib.json",
        "assets": [
          "libs/platform/node/node-logger/README.md",
          "libs/platform/node/node-logger/package.json"
        ]
      }
    },
    "test": {
      "executor": "@nx/vite:test",
      "outputs": ["{options.reportsDirectory}"],
      "options": {
        "reportsDirectory": "coverage/libs/platform/node/node-logger",
        "configFile": "libs/platform/node/node-logger/vitest.config.mts"
      }
    },
    "lint": {
      "executor": "@nx/eslint:lint"
    }
  }
}
