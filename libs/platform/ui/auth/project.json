{
  "name": "platform-ui-auth",
  "$schema": "../../../../node_modules/nx/schemas/project-schema.json",
  "sourceRoot": "libs/platform/ui/auth/src",
  "prefix": "aui",
  "projectType": "library",
  "tags": ["scope:platform", "type:ui"],
  "targets": {
    "build": {
      "executor": "@nx/vite:build",
      "outputs": ["{options.outputPath}"],
      "dependsOn": [],
      "options": {
        "outputPath": "dist/libs/platform/ui/auth",
        "configFile": "libs/platform/ui/auth/vite.config.mts",
        "main": "libs/platform/ui/auth/src/index.ts",
        "assets": ["libs/platform/ui/auth/*.md"]
      }
    },
    "test": {
      "executor": "@nx/vitest:test",
      "dependsOn": [],
      "outputs": [
        "{options.reportsDirectory}",
        "{options.htmlReportDirectory}"
      ],
      "options": {
        "reportsDirectory": "coverage/libs/platform/ui/auth",
        "htmlReportDirectory": "dist/test-reports/libs/platform/ui/auth",
        "configFile": "libs/platform/ui/auth/vitest.config.mts"
      }
    },
    "lint": {
      "executor": "@nx/eslint:lint"
    }
  }
}
