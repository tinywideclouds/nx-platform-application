{
  "name": "contacts-app",
  "$schema": "../../../node_modules/nx/schemas/project-schema.json",
  "projectType": "application",
  "prefix": "app",
  "sourceRoot": "apps/contacts/contacts-app/src",
  "tags": ["scope:contacts"],
  "targets": {
    "test": {
      "executor": "@nx/vite:test",
      "outputs": [
        "{options.reportsDirectory}",
        "{options.htmlReportsDirectory}"
      ],
      "options": {
        "reportsDirectory": "coverage/apps/contacts/contacts-app",
        "htmlReportsDirectory": "dist/test-reports/apps/contacts/contacts-app",
        "configFile": "apps/contacts/contacts-app/vitest.config.mts"
      }
    },
    "build": {
      "executor": "@angular/build:application",
      "outputs": ["{options.outputPath}"],
      "options": {
        "outputPath": "dist/apps/contacts/contacts-app",
        "browser": "apps/contacts/contacts-app/src/main.ts",

        "tsConfig": "apps/contacts/contacts-app/tsconfig.app.json",
        "assets": [
          {
            "glob": "**/*",
            "input": "apps/contacts/contacts-app/public"
          }
        ],
        "styles": [
          "apps/contacts/contacts-app/src/custom-theme.scss",
          "apps/contacts/contacts-app/src/styles.css"
        ]
      },
      "configurations": {
        "production": {
          "budgets": [
            {
              "type": "initial",
              "maximumWarning": "500kb",
              "maximumError": "1mb"
            },
            {
              "type": "anyComponentStyle",
              "maximumWarning": "4kb",
              "maximumError": "8kb"
            }
          ],
          "outputHashing": "all"
        },
        "development": {
          "optimization": false,
          "extractLicenses": false,
          "sourceMap": true,
          "fileReplacements": [
            {
              "replace": "apps/contacts/contacts-app/src/app/environments/environment.ts",
              "with": "apps/contacts/contacts-app/src/app/environments/environment.dev.ts"
            }
          ]
        },
        "mock": {
          "sourceMap": true,
          "fileReplacements": [
            {
              "replace": "apps/contacts/contacts-app/src/app/environments/environment.ts",
              "with": "apps/contacts/contacts-app/src/app/environments/environment.mock.ts"
            }
          ]
        }
      },
      "defaultConfiguration": "development"
    },
    "serve": {
      "continuous": true,
      "executor": "@angular/build:dev-server",
      "configurations": {
        "production": {
          "buildTarget": "contacts-app:build:production"
        },
        "development": {
          "buildTarget": "contacts-app:build:development"
        }
      },
      "defaultConfiguration": "development"
    },
    "extract-i18n": {
      "executor": "@angular/build:extract-i18n",
      "options": {
        "buildTarget": "contacts-app:build"
      }
    },
    "lint": {
      "executor": "@nx/eslint:lint"
    },
    "serve-static": {
      "continuous": true,
      "executor": "@nx/web:file-server",
      "options": {
        "buildTarget": "contacts-app:build",
        "port": 4200,
        "staticFilePath": "dist/apps/contacts/contacts-app/browser",
        "spa": true
      }
    }
  }
}
