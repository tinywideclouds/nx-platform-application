{
  "name": "ng-action-intention",
  "$schema": "../../../node_modules/nx/schemas/project-schema.json",
  "projectType": "application",
  "prefix": "app",
  "sourceRoot": "apps/messenger/ng-action-intention/src",
  "tags": ["scope:messenger"],
  "targets": {
    "build": {
      "executor": "@angular/build:application",
      "outputs": ["{options.outputPath}"],
      "options": {
        "outputPath": "dist/apps/messenger/ng-action-intention",
        "index": "apps/messenger/ng-action-intention/src/index.html",
        "browser": "apps/messenger/ng-action-intention/src/main.ts",
        "tsConfig": "apps/messenger/ng-action-intention/tsconfig.app.json",
        "inlineStyleLanguage": "css",
        "statsJson": true,
        "assets": [
          "apps/messenger/ng-action-intention/src/favicon.ico"
        ],
        "styles": ["apps/messenger/ng-action-intention/src/styles.css"]
      },
      "configurations": {
        "production": {
          "budgets": [
            {
              "type": "initial",
              "maximumWarning": "500kb",
              "maximumError": "1mb"
            },
            {
              "type": "anyComponentStyle",
              "maximumWarning": "4kb",
              "maximumError": "8kb"
            }
          ],
          "outputHashing": "all"
        },
        "development": {
          "optimization": false,
          "extractLicenses": false,
          "sourceMap": true
        },
        "development-integrated": {
          "sourceMap": true,
          "fileReplacements": [
            {
              "replace": "apps/messenger/ng-action-intention/src/environments/environment.ts",
              "with": "apps/messenger/ng-action-intention/src/environments/environment.dev.ts"
            }
          ]
        },
        "mock": {
          "sourceMap": true,
          "fileReplacements": [
            {
              "replace": "apps/messenger/ng-action-intention/src/environments/environment.ts",
              "with": "apps/messenger/ng-action-intention/src/environments/environment.mock.ts"
            }
          ]
        }
      },
      "defaultConfiguration": "production"
    },
    "serve": {
      "executor": "@angular/build:dev-server",
      "options": {
        "proxyConfig": "apps/messenger/ng-action-intention/proxy.conf.json"
      },
      "configurations": {
        "production": {
          "buildTarget": "ng-action-intention:build:production"
        },
        "development": {
          "buildTarget": "ng-action-intention:build:development"
        },
        "mock": {
          "buildTarget": "ng-action-intention:build:mock"
        },
        "development-integrated": {
          "buildTarget": "ng-action-intention:build:development-integrated"
        }
      },
      "defaultConfiguration": "development"
    },
    "serve-integrated": {
      "executor": "nx:run-commands",
      "options": {
        "parallel": true,
        "commands": [
          "nx serve ng-action-intention --configuration=development-integrated",
          "nx serve identity-service",
          "wait-on http://localhost:3000/api/health-check && nx serve node-messaging-service"
        ]
      }
    },
    "extract-i18n": {
      "executor": "@angular/build:extract-i18n",
      "options": {
        "buildTarget": "ng-action-intention:build"
      }
    },
    "lint": {
      "executor": "@nx/eslint:lint"
    },
    "test": {
      "executor": "@nx/vite:test",
      "outputs": [
        "{options.reportsDirectory}"
      ],
      "options": {
        "reportsDirectory": "coverage/apps/messenger/ng-action-intention",
        "configFile": "apps/messenger/ng-action-intention/vitest.config.mts"
      }
    }
  }
}
